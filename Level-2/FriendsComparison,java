
import java.util.Scanner;
public class FriendsComparison {
    public static void main(String[] args) {
        String[] friends = {"Amar", "Akbar", "Anthony"};
        int[] ages = new int[3];
        double[] heights = new double[3];
        Scanner scanner = new Scanner(System.in);
        for (int i = 0; i < 3; i++) {
            while (true) {
                try {
                    System.out.print("Enter age of " + friends[i] + ": ");
                    int age = Integer.parseInt(scanner.nextLine());
                    if (age <= 0) {
                        System.out.println("Age must be positive. Please try again.");
                        continue;
                    }
                    ages[i] = age;
                    System.out.print("Enter height of " + friends[i] + " in cm: ");
                    double height = Double.parseDouble(scanner.nextLine());
                    if (height <= 0) {
                        System.out.println("Height must be positive. Please try again.");
                        continue;
                    }
                    heights[i] = height;
                    break;
                } catch (NumberFormatException e) {
                    System.out.println("Invalid input. Please enter numeric values.");
                }
            }
        }
        int youngestIndex = 0;
        for (int i = 1; i < 3; i++) {
            if (ages[i] < ages[youngestIndex]) {
                youngestIndex = i;
            }
        }
        int tallestIndex = 0;
        for (int i = 1; i < 3; i++) {
            if (heights[i] > heights[tallestIndex]) {
                tallestIndex = i;
            }
        }
        System.out.println("\n--- Results ---");
        System.out.println("Youngest Friend: " + friends[youngestIndex] + " (Age: " + ages[youngestIndex] + ")");
        System.out.println("Tallest Friend: " + friends[tallestIndex] + " (Height: " + heights[tallestIndex] + " cm)");
        scanner.close();
    }
}

